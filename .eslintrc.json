{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "airbnb-typescript"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "tsconfig.json",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier",
    "typescript",
    "tailwindcss"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "react/require-default-props": "off",
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}